@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<style>
    .card {
        margin-top: 50px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 15px;
       /* background-color: #f5f3f5; */
        background: linear-gradient(to right, #FFEAC7, #ffffff, #D1FFC7 );
        padding: 20px;
        transition: all 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

    .form-control {
        border-radius: 10px;
        background-color: #f8f9fa; /* Lighter background color */
        padding: 10px;
        transition: all 0.3s ease;
        box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2); /* Add a shadow */
    }

        .form-control:focus {
            transform: translateY(-2px); /* Move input up slightly on focus */
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.3); /* Increase shadow on focus */
        }

    .btn-3d {
        box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2); /* Add a shadow */
        transition: all 0.3s ease; /* Add transition for smooth effect */
        border-radius: 10px;
        background-color: #007bff; /* Primary button color */
        color: #fff; /* Text color */
        padding: 10px;
        cursor: pointer;
    }

        .btn-3d:hover {
            transform: translateY(-2px); /* Move button up slightly on hover */
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.3); /* Increase shadow on hover */
            background-color: #0056b3; /* Darker primary button color on hover */
        }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card">
                <h3>@ViewData["Title"]</h3>
                <h4>Enter your email.</h4>
                <hr />
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"  />
                        <label asp-for="Input.Email" class="form-label "></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <hr />
                    <button type="submit" class="w-100 btn btn-lg btn-primary btn-3d">Reset Password</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
