@model SwadeshiApp.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<style>
    .delete-container:hover {
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    .btn-3d {
        box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
        border-radius: 10px;
    }

        .btn-3d:hover {
            transform: translateY(-2px);
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.3);
        }
    .delete-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background: linear-gradient(to right, #FFEAC7, #ffffff, #D1FFC7 );
    }

        .delete-container h1 {
            font-size: 24px;
            margin-bottom: 10px;
            color: #333;
        }

        .delete-container h3 {
            font-size: 18px;
            margin-bottom: 20px;
            color: #555;
        }

        .delete-container table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        .delete-container th,
        .delete-container td {
            padding: 8px;
            border: 1px solid #ddd;
            text-align: left;
        }

        .delete-container th {
           /* background-color: #f2f2f2;*/
        }

        .delete-container form {
            display: inline-block;
        }

        .delete-container .btn-delete,
        .delete-container .btn-back {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .delete-container .btn-delete {
            background-color: #dc3545;
            color: #fff;
        }

            .delete-container .btn-delete:hover,
            .delete-container .btn-back:hover {
                background-color: #c82333;
            }

        .delete-container .btn-back {
            background-color: #6c757d;
            color: #fff;
            margin-left: 10px;
        }
</style>
<br></br>
<div class="delete-container">
    
    <h1>Delete</h1>
    <h3>Are you sure you want to delete this?</h3>
    <table>
        <tr>
            <th>Category Name</th>
            <td>@Html.DisplayFor(model => model.CategoryName)</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>@Html.DisplayFor(model => model.Description)</td>
        </tr>
        <tr>
            <th>Active</th>
            <td>@Html.DisplayFor(model => model.isActive)</td>
        </tr>
    </table>
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryID" />
        <button type="submit" class="btn btn-delete btn-3d">Delete</button>
    </form>
    <a asp-action="Index" class="btn btn-back btn-3d">Back to List</a>
</div>
