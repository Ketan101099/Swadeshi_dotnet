@model SwadeshiApp.Models.Category

@{
    ViewData["Title"] = "Details";
}
<style>
     .card {
        margin-top: 50px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 15px;
        background: linear-gradient(to right, #FFEAC7, #ffffff, #D1FFC7 );
        padding: 20px;
        transition: all 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

    .btn-3d {
        box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
        border-radius: 10px;
    }

        .btn-3d:hover {
            transform: translateY(-2px);
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.3);
        }
</style>
<div class="container">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">Details</h1>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th class="col-sm-2">@Html.DisplayNameFor(model => model.CategoryName)</th>
                            <td class="col-sm-10">@Html.DisplayFor(model => model.CategoryName)</td>
                        </tr>
                        <tr>
                            <th class="col-sm-2">@Html.DisplayNameFor(model => model.Description)</th>
                            <td class="col-sm-10">@Html.DisplayFor(model => model.Description)</td>
                        </tr>
                        <tr>
                            <th class="col-sm-2">@Html.DisplayNameFor(model => model.isActive)</th>
                            <td class="col-sm-10">@Html.DisplayFor(model => model.isActive)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.CategoryID" class="btn btn-primary btn-3d">Edit</a>
                <a asp-action="Index" class="btn btn-secondary btn-3d">Back to List</a>
            </div>
        </div>
    </div>
</div>
