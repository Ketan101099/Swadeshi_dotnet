@model SwadeshiApp.Models.Product

@{
    ViewData["Title"] = "Details";
}

<style>
    /* Custom border colors */
    .card{
        background: linear-gradient(to right, #FFEAC7, #ffffff, #D1FFC7 );
    }
    .custom-border {
        border: 2px solid;
        border-image-slice: 1;
        border-image-source: linear-gradient(to right, #FFA500, #32CD32);
        padding: 20px;
        border-radius: 10px;
        position: relative; /* Set position to relative */
    }

    /* Shadow effect */
    .shadow-effect {
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    }

    /* Background image with opacity */
    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        /*  background-image: url('/Images/India.jpg'); /* Use a relative path or a URL */ */ background-size: cover;
        background-position: center;
        opacity: 0.2; /* Adjust the opacity as needed */
        border-radius: 10px; /* Apply border-radius */
    }

    /* Bold text */
    .bold-text {
        font-weight: bold;
    }
</style>

<h1 class="text-center mb-4">Details</h1>

<div class="container">
    <div class="card shadow custom-border">
        <!-- Background image with opacity -->
        <div class="background-image"></div>
        <div class="card-body shadow-effect">
            <h4 class="card-title">Product</h4>
            <hr />
            <div class="row">
                <div class="col-sm-3 bold-text">Name</div>
                <div class="col-sm-9">@Html.DisplayFor(model => model.Name)</div>
            </div>
            <div class="row">
                <div class="col-sm-3 bold-text">Unit Price</div>
                <div class="col-sm-9">@Html.DisplayFor(model => model.UnitPrice)</div>
            </div>
            <div class="row">
                <div class="col-sm-3 bold-text">Old Price</div>
                <div class="col-sm-9">@Html.DisplayFor(model => model.OldPrice)</div>
            </div>
            <div class="row">
                <div class="col-sm-3 bold-text">Discount</div>
                <div class="col-sm-9">@Html.DisplayFor(model => model.Discount)</div>
            </div>
            <div class="row">
                <div class="col-sm-3 bold-text">Units In Stock</div>
                <div class="col-sm-9">@Html.DisplayFor(model => model.UnitInStock)</div>
            </div>
            <div class="row">
                <div class="col-sm-3 bold-text">Product Available</div>
                <div class="col-sm-9">@Html.DisplayFor(model => model.ProductAvailable)</div>
            </div>
            <div class="row">
                <div class="col-sm-3 bold-text">Short Description</div>
                <div class="col-sm-9">@Html.DisplayFor(model => model.ShortDescription)</div>
            </div>
            <div class="row">
                <div class="col-sm-3 bold-text">Picture Path</div>
                <div class="col-sm-9">@Html.DisplayFor(model => model.PicturePath)</div>
            </div>
            <div class="row">
                <div class="col-sm-3 bold-text">Note</div>
                <div class="col-sm-9">@Html.DisplayFor(model => model.Note)</div>
            </div>
            <div class="row">
                <div class="col-sm-3 bold-text">Category</div>
                <div class="col-sm-9">@Html.DisplayFor(model => model.CategoryName)</div>
            </div>
            <div class="row">
                <div class="col-sm-3 bold-text">Subcategory</div>
                <div class="col-sm-9">@Html.DisplayFor(model => model.SubCategoryName)</div>
            </div>
            <div class="row">
                <div class="col-sm-3 bold-text">Supplier ID</div>
                <div class="col-sm-9">@Html.DisplayFor(model => model.SupplierID)</div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.ProductID" class="btn btn-success">Edit</a>
    <a asp-action="Index" class="btn btn-warning text-white">Back to List</a>
</div>