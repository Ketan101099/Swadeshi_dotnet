@model SwadeshiApp.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<style>
    /* Existing styles */

    /* Custom border with orange and green gradient */
    .border-green-orange {
        border: 2px solid;
        border-image-slice: 1;
        border-image-source: linear-gradient(to right, #FFA500, #32CD32); /* Green to orange gradient */
        border-radius: 10px;
        background: linear-gradient(to right, #FFEAC7, #ffffff, #D1FFC7 );
    }



    /* Additional styles for buttons */
    .btn-danger {
        background-color: #DC3545; /* Red color */
        border-color: #DC3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-secondary {
        background-color: #6C757D; /* Gray color */
        border-color: #6C757D;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
        
</style>

<h1 class="text-center mb-4">Delete Product</h1>

<div class="container">
    <div class="card shadow border-green-orange">
        <!-- Applying the custom border style -->
        <div class="card-body">
            <h3 class="card-title">Are you sure you want to delete this product?</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.UnitPrice)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UnitPrice)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.OldPrice)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.OldPrice)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Discount)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Discount)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.UnitInStock)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UnitInStock)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ProductAvailable)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductAvailable)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ShortDescription)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ShortDescription)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PicturePath)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PicturePath)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Note)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Note)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CategoryName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoryName)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.SubCategoryName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SubCategoryName)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.SupplierID)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SupplierID)</dd>
            </dl>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="ProductID" />
                <div class="text-center">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-warning text-white">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>