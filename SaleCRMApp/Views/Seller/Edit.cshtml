            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control" pattern="[A-Za-z]+" title="Please enter only alphabetic characters" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" pattern="[A-Za-z]+" title="Please enter only alphabetic characters" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MobileNo">Mobile No</label>
                <input asp-for="MobileNo" class="form-control" pattern="[0-9]{10}" title="Please enter a 10-digit mobile number" />
                <span asp-validation-for="MobileNo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Gender">Gender</label>
                <input asp-for="Gender" class="form-control" pattern="^(Male|Female|Other)$" title="Please enter Male, Female, or Other" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address">Address</label>
                <input asp-for="Address" class="form-control" pattern=".*\S+.*" title="Please enter a valid address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="city">City</label>
                <input asp-for="city" class="form-control" pattern="[A-Za-z\s]+" title="Please enter only alphabetic characters and spaces" />
                <span asp-validation-for="city" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PinCode">Pin Code</label>
                <input asp-for="PinCode" class="form-control" pattern="[0-9]{6}" title="Please enter a 6-digit pin code" />
                <span asp-validation-for="PinCode" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-primary btn-3d btn-block">Save</button>
        </form>
    </div>
  
   
