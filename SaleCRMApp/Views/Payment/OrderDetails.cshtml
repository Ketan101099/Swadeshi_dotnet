           .card {
        margin-top: 50px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 15px;
        background: linear-gradient(to right, #FFEAC7, #ffffff, #D1FFC7);
        padding: 20px;
        transition: all 0.3s ease;
        width:50%;
        margin: 0 auto; /* Center the card */
        position:center;
        margin-left:300px;
        margin-right:300px;
    }

    .card:hover {
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    .form-control {
        border: none;
        border-radius: 10px;
        background-color: #f8f9fa; 
        padding: 10px;
        transition: all 0.3s ease;
        width: 50%; 
    }

    .form-control:focus {
        box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.1);
    }



    .btn-3d {
        box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2); /* Add a shadow */
        transition: all 0.3s ease; /* Add transition for smooth effect */
    }

        .btn-3d:hover {
            transform: translateY(-2px); /* Move button up slightly on hover */
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.3); /* Increase shadow on hover */
        }

    .input-3d {
        box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2); /* Add a shadow */
        transition: all 0.3s ease; /* Add transition for smooth effect */
    }

        .input-3d:focus {
            transform: translateY(-2px); /* Move input up slightly on focus */
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.3); /* Increase shadow on focus */
        }

        .input-3d:not(:focus) {
            transition: all 0.3s ease; /* Add transition for smooth effect on blur */
            transform: translateY(0); /* Reset transform on blur */
            box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2); /* Reset shadow on blur */
        }

      
</style>
<div class="card">
<div class="row">
    @*<div class="col-md-3">*@
        <form id="paymentForm" method="post">
            <br>
            <div class="form-group">
                    <h4>Payment Method</h4><br />
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="paymentMethod" id="cashOnDelivery" value="cash">
                    <label class="form-check-label" for="cashOnDelivery">Cash on Delivery</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="paymentMethod" id="payOnline" value="online">
                    <label class="form-check-label" for="payOnline">Pay Online</label>
                </div>
            </div>

            <div id="cashOnDeliveryForm" style="display: none;">
              
                <div class="form-group">
                    <label asp-for="UserDetail.FirstName">First Name</label>
                    <input asp-for="UserDetail.FirstName" class="form-control input-3d" name="FirstName" />
                </div>

                <div class="form-group">
                    <label asp-for="UserDetail.LastName">Last Name</label>
                        <input asp-for="UserDetail.LastName" class="form-control input-3d" name="LastName" />
                </div>

                <div class="form-group">
                    <label asp-for="UserDetail.MobileNo">Mobile Number</label>
                    <input asp-for="UserDetail.MobileNo" class="form-control input-3d" name="MobileNo" />
                </div>

                <div class="form-group">
                    <label asp-for="UserDetail.Email">Email</label>
                        <input asp-for="UserDetail.Email" class="form-control input-3d" name="Email" />
                </div>

                <div class="form-group">
                    <label asp-for="OrderDetails.TotalAmount">Total Amount</label>
                        <input asp-for="OrderDetails.TotalAmount" class="form-control input-3d" name="TotalAmount" />
                </div>

                <div class="form-group">
                    <label asp-for="OrderDetails.Address">Address</label>
                        <input asp-for="OrderDetails.Address" class="form-control input-3d" name="Address" />
                </div>

                <div class="form-group">
                    <label asp-for="OrderDetails.City">City</label>
                        <input asp-for="OrderDetails.City" class="form-control input-3d" name="City" />
                </div>

                <div class="form-group">
                    <label asp-for="OrderDetails.PinCode">Pin Code</label>
                        <input asp-for="OrderDetails.PinCode" class="form-control input-3d" name="PinCode" />
                </div>

                <input type="hidden" asp-for="OrderDetails.UserId" name="UserId" />
                <input type="hidden" asp-for="OrderDetails.ProductId" name="ProductId" />
               
                <hr></hr>
                <div class="form-group">
                    <button type="submit" class="btn-3d btn-primary">Submit Cash on Delivery</button>
                </div>
            </div>

            <div id="payOnlineForm" style="display: none;">
                
                <div class="form-group">
                    <label asp-for="UserDetail.FirstName">First Name</label>
                        <input asp-for="UserDetail.FirstName" class="form-control input-3d" />
                </div>

                <div class="form-group">
                    <label asp-for="UserDetail.LastName">Last Name</label>
                        <input asp-for="UserDetail.LastName" class="form-control input-3d" />
                </div>

                <div class="form-group">
                    <label asp-for="UserDetail.MobileNo">Mobile Number</label>
                        <input asp-for="UserDetail.MobileNo" class="form-control input-3d" />
                </div>

                <div class="form-group">
                    <label asp-for="UserDetail.Email">User ID</label>
                        <input asp-for="UserDetail.Email" class="form-control input-3d" />
                </div>

                <div class="form-group">
                    <label asp-for="OrderDetails.TotalAmount">Total Amount</label>
                        <input asp-for="OrderDetails.TotalAmount" class="form-control input-3d" />
                </div>

                <div class="form-group">
                    <label asp-for="OrderDetails.Address">Address</label>
                        <input asp-for="OrderDetails.Address" class="form-control input-3d" />
                </div>

                <div class="form-group">
                    <label asp-for="OrderDetails.City">City</label>
                        <input asp-for="OrderDetails.City" class="form-control input-3d" />
                </div>

                <div class="form-group">
                    <label asp-for="OrderDetails.PinCode">Pin Code</label>
                        <input asp-for="OrderDetails.PinCode" class="form-control input-3d" />
                </div>

                <input type="hidden" asp-for="OrderDetails.UserId" />
                <input type="hidden" asp-for="OrderDetails.ProductId" />

               
                <hr></hr>
                <div class="form-group">
                    <button type="submit" class="btn-3d btn-primary">Submit Pay Online</button>
                </div>
            </div>
        </form>
    </div>
</div>
@*</div>*@

@section Scripts {
    <script>
        $(document).ready(function () {
            $('input[type="radio"]').click(function () {
                if ($(this).attr('id') == 'cashOnDelivery') {
                    $('#cashOnDeliveryForm').show();
                    $('#payOnlineForm').hide();
                    $('#paymentForm').attr('action', '@Url.Action("createCOD", "Order")');
                } else if ($(this).attr('id') == 'payOnline') {
                    $('#cashOnDeliveryForm').hide();
                    $('#payOnlineForm').show();
                    $('#paymentForm').attr('action', '@Url.Action("initiateOrder", "Payment")');
                }
            });
        });
    </script>
}


