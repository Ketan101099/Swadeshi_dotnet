@model SwadeshiApp.Models.SubCategory

@{
    ViewData["Title"] = "Delete";
}

<style>
    .delete-container:hover {
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    .btn-3d {
        box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
        border-radius: 10px;
    }

        .btn-3d:hover {
            transform: translateY(-2px);
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.3);
        }
    .delete-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
       
        background: linear-gradient(to right, #FFEAC7, #ffffff, #D1FFC7 );
    }

        .delete-container h1 {
            font-size: 24px;
            margin-bottom: 10px;
            color: #333;
        }

        .delete-container h3 {
            font-size: 18px;
            margin-bottom: 20px;
            color: #555;
        }

        .delete-container .details-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

            .delete-container .details-table th,
            .delete-container .details-table td {
                padding: 8px;
                border: 1px solid #ddd;
                text-align: left;
            }

            .delete-container .details-table th {
               /* background-color: #f2f2f2;*/
            }

        .delete-container form {
            margin-top: 20px;
        }
</style>
<br />
<div class="delete-container">
    <h1>Delete</h1>
    <h3>Are you sure you want to delete this?</h3>

    <div>
        <h4>SubCategory</h4>
        <hr />
        <table class="details-table">
            <tr>
                <th>SubCategory Name</th>
                <td>@Html.DisplayFor(model => model.SubCategoryName)</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>@Html.DisplayFor(model => model.Description)</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>@Html.DisplayFor(model => model.isActive)</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>@Html.DisplayFor(model => model.Category.CategoryName)</td>
            </tr>
        </table>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="SubCategoryID" />
        <button type="submit" class="btn btn-danger btn-3d">Delete</button>
        <a asp-action="Index" class="btn btn-secondary btn-3d">Back to List</a>
    </form>
</div>
