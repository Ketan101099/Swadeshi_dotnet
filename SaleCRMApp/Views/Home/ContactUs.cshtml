<style>
    /* Encapsulate styles within a specific class */
    .contact-form-container {
        /*background-color: #fffff0;*/
        max-width: 800px;
        margin: 50px auto;
        padding: 50px;
        border-radius: 20px;
        background: linear-gradient(to right, #FFEAC7, #ffffff, #D1FFC7 );
        box-shadow: 10px 10px 20px #c9cccf, -10px -10px 20px #ffffff;
    }

        .contact-form-container h1 {
            font-size: 36px;
            margin-bottom: 20px;
            color: #333;
        }

        /* Add more styles for the contact form elements as needed */

        .contact-form-container .form-group {
            margin-bottom: 20px;
        }

        .contact-form-container label {
            font-weight: bold;
            color: #666;
        }

        .contact-form-container input[type="text"],
        .contact-form-container input[type="email"],
        .contact-form-container textarea {
            width: 100%;
            padding: 10px;
            border-radius: 10px;
            border: 1px solid #ccc;
            background-color: #f0f2f5;
        }

        .contact-form-container textarea {
            resize: vertical;
        }

        .contact-form-container button {
            padding: 10px 20px;
            border: none;
            border-radius: 10px;
            background-color: #4CAF50;
            color: white;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .contact-form-container button:hover {
                background-color: #45a049;
            }

        .contact-form-container address {
            font-style: normal;
            color: #666;
        }

        .contact-form-container a {
            color: #4CAF50;
        }

        .contact-form-container .btn-3d {
            box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
        }

            .contact-form-container .btn-3d:hover {
                transform: translateY(-2px);
                box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.3);
            }

        .contact-form-container .input-3d {
            box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
        }

            .contact-form-container .input-3d:focus {
                transform: translateY(-2px);
                box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.3);
            }

            .contact-form-container .input-3d:not(:focus) {
                transition: all 0.3s ease;
                transform: translateY(0);
                box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2);
            }
</style>

<div class="container">
    <div class="contact-form-container">
        <h1>Contact Us</h1>

        <form action="#" method="post">
           @*  <div class="form-group">
                <label for="name">Name:</label>
                <input class="input-3d" type="text" id="name" name="name" placeholder="Enter Your Name" required>
            </div> *@
            <div class="form-group">
                <label for="name">Name:</label>
                <input class="input-3d" type="text" id="name" name="name" placeholder="Enter Your Name" pattern="[A-Za-z\s]+" title="Please enter only alphabetic characters and spaces" required>
            </div>


            <div class="form-group">
                <label for="email">Email:</label>
                <input class="input-3d" type="email" id="email" name="email" placeholder="Enter Your Email" required>
            </div>

            <div class="form-group">
                <label for="message">Message:</label>
                <textarea class="input-3d" id="message" name="message" rows="4" placeholder="Enter Your Message" required></textarea>
            </div>

            <button class="btn btn-primary btn-3d" type="submit">Submit</button>
        </form>

