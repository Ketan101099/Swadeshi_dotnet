<br></br>
<table class="neumorphic-table">
    <thead>
        <tr>
            <th>State Name</th>
            <th>State Description</th>
            <th>State Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var state in Model)
        {
            <tr>
                <td>@state.StateName</td>
                <td>@state.StateDescription</td>
                <td>
                    @if (state.StateImage != null)
                    {
                        <img src="data:image/png;base64,@Convert.ToBase64String(state.StateImage)" alt="State Image" style="max-width: 100px; max-height: 100px;" />
                    }
                    else
