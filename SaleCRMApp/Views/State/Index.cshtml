                    <a asp-action="Edit" asp-route-id="@state.Id" class="btn btn-primary btn-3d" style="width: 100px;">Edit</a>
                    <hr>
                    <a asp-action="Delete" asp-route-id="@state.Id" class="btn btn-danger btn-3d" style="width: 100px;">Delete</a>
                </td>
                

            </tr>
        }
    </tbody>
</table>
