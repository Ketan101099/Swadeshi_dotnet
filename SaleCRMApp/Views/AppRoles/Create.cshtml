@using Microsoft.AspNetCore.Identity
@model IdentityRole

<style>
    .form-container {
        background: linear-gradient(to right, #FFEAC7, #ffffff, #D1FFC7);
    }
</style>
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form method="post" class="mt-5 p-4 border rounded shadow form-container">
            <h2 class="mb-4">Create Role</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3" >
                <input asp-for="Name" class="form-control" placeholder="Role Name" aria-required="true" />
                <label asp-for="Name">Role Name</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Save</button>
        </form>
    </div>
</div>
